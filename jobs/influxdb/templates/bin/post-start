#!/bin/bash

set -e

# DI-02
<% if p('influxdb.https_enabled') == 'true' %>
curl "https://localhost:<%= p('influxdb.port') %>/query" --data-urlencode "q=CREATE USER '<%= p('influxdb.user') %>' WITH PASSWORD '<%= p('influxdb.password') %>'  WITH ALL PRIVILEGES" -k
<% else %>
curl "http://localhost:<%= p('influxdb.port') %>/query" --data-urlencode "q=CREATE USER '<%= p('influxdb.user') %>' WITH PASSWORD '<%= p('influxdb.password') %>'  WITH ALL PRIVILEGES" -k
<% end %>

# DI-05
sudo chown vcap:vcap /var/vcap/store/influxdb/meta/meta.db

# Boostrapper where is the actual executable
bootstrapper=/var/vcap/packages/bootstrapper/bootstrapper

# HTTPS 
<% if p('influxdb.https_enabled') == 'true' %>
protocol=https
<% else %>
protocol=http
<% end %>

$bootstrapper \
        -influxUrl $protocol://localhost:<%= p('influxdb.port') %> \
        -user <%= p('influxdb.user') %> \
        -password <%= p('influxdb.password') %> \
        -database <%= p('influxdb.cf_db_name') %>  \
        -retention <%= p('influxdb.interval') %> \
        -replication <%= p('influxdb.replication') %>

$bootstrapper \
        -influxUrl $protocol://localhost:<%= p('influxdb.port') %> \
        -user <%= p('influxdb.user') %> \
        -password <%= p('influxdb.password') %> \
        -database <%= p('influxdb.bosh_db_name') %> \
        -retention <%= p('influxdb.interval') %> \
        -replication <%= p('influxdb.replication') %>

$bootstrapper \
        -influxUrl $protocol://localhost:<%= p('influxdb.port') %> \
        -user <%= p('influxdb.user') %> \
        -password <%= p('influxdb.password') %> \
        -database <%= p('influxdb.container_db_name') %> \
        -retention <%= p('influxdb.interval') %> \
        -replication <%= p('influxdb.replication') %>

$bootstrapper \
        -influxUrl $protocol://localhost:<%= p('influxdb.port') %> \
        -user <%= p('influxdb.user') %> \
        -password <%= p('influxdb.password') %> \
        -database <%= p('influxdb.logging_db_name') %> \
        -retention <%= p('influxdb.interval') %> \
        -replication <%= p('influxdb.replication') %>

